    android:layout_height="match_parent"
    >

    <com.readboy.Q.HappyDoodle.GuideBK
        android:id="@+id/bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
         />

    <!-- <ImageView
        android:id="@+id/bk"
        android:layout_width="match_parent"
